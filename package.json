{
  "name": "rulekeeper",
  "version": "0.1.0",
  "description": "Sync and manage Claude Code rules across projects",
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "rules",
    "sync",
    "cli",
    "developer-tools"
  ],
  "author": "Adam Collins",
  "license": "MIT",
  "homepage": "https://rulekeeper.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adxmcollins/rulekeeper.git"
  },
  "bugs": {
    "url": "https://github.com/adxmcollins/rulekeeper/issues"
  },
  "bin": {
    "rulekeeper": "./dist/index.js",
    "rk": "./dist/index.js"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test:run",
    "release": "npm run build && npm publish"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "commander": "^11.1.0",
    "env-paths": "^3.0.0",
    "picocolors": "^1.0.0",
    "simple-git": "^3.22.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^0.34.0"
  }
}
